extends _base


block content
	section#hero.fade-in.delay-1
		.row
			.column
				h2 Creative websites for unique companies.
				p.lead
					| I create hand-crafted websites and brand identities that will help you stand out from the competition.

	section#showcase.bg-gray.fade-in.delay-2
		- var showcase = sortShowcase(articles)
		for item in showcase
			if item.showcase
				include _showcase-item

	section.row.expanded.column.text-center.bg-black(style='padding: 5em 0 0;')
		a.button.hollow(href='/portfolio/') View All Projects &rarr;

	section#services.bg-black
		.row.medium-up-3.text-center
			.column
				#canvas1
				.animateme(data-when='enter' data-from='1' data-to='0' data-opacity='1' data-translatey='500')
					h3 <small>Graphic</small> Design
					p
						| From brand identities to printed marketing materials, I can give your company a fresh look that stands out from the crowd.
			.column
				#canvas2
				.animateme(data-when='enter' data-from='1' data-to='0' data-opacity='1' data-translatey='500')
					h3 <small>Website</small> Development
					p
						| I custom-build all of my websites using a variety of open-source frameworks and CMS platforms. No cookie-cutter Wordpress themes!
			.column
				#canvas3
				.animateme(data-when='enter' data-from='1' data-to='0' data-opacity='1' data-translatey='500')
					h3 <small>Marketing</small> Strategy
					p
						| I can help you make the most of the latest technologies and put them to work for your company.

	section#testimonials.bg-gray
		.carousel
			for item in testimonials
				.slide
					.row.expanded.align-center
						.column.medium-8.medium-centered.large-6
							blockquote
								p.lead= item.quote
								cite= item.title
								//- a(href='{{ url(item.client) }}') {{ item.name }}

	section#background
		.row.expanded.align-middle
			.column.large-6.scrollme
					//- .parallax
					img.parallax(data-src='/assets/images/sunderland-portrait.jpg' alt='Steve Sunderland portrait' style='width: 100%;')
			.column.large-5.large-offset-1
				h3 Steve Sunderland
				p Steve is a Graphic Designer and Web Developer currently living in Los Angeles. He graduated from the Fashion Institute of Technology in New York City with a degree in Communication Design. Over the past decade, Steve has developed design solutions for a variety of companies including artists, startups, agencies and non-profit organizations.
				a.button.hollow(href='{{ cms.homepage.resume.url }}' style='border-bottom: none;')
						| View my Resume &rarr;
